{
  "servers": {
    "postgres": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-postgres",
        "postgresql://spycon:${input:postgres-password}@localhost:5432/ecommerce_db"
      ]
    }
  },
  "inputs": [
    {
      "type": "promptString",
      "id": "postgres-password",
      "description": "PostgreSQL Password",
      "password": true
    }
  ]
}
